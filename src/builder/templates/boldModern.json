{
  "name": "Bold Modern Studio",
  "slug": "bold-modern-studio",
  "preview": "/previews/bold-modern.jpg",
  "description": "Full-bleed sections with deep blue accents for contemporary photographers",
  "tags": ["Modern", "Bold", "Professional", "Studio"],
  "globalStyles": {
    "colors": {
      "primary": "#1e3a8a",
      "secondary": "#3b82f6",
      "text": "#111827",
      "background": "#ffffff"
    },
    "fonts": {
      "heading": "Bebas Neue",
      "body": "Inter"
    },
    "spacing": "tight",
    "borderRadius": "none"
  },
  "pages": [
    {
      "title": "Home",
      "slug": "home",
      "blocks": [
        {
          "type": "Hero",
          "props": {
            "headline": "BOLD VISUALS",
            "subtext": "Photography that makes a statement",
            "bgImage": "/images/bold-hero.jpg",
            "ctaText": "See Our Work",
            "ctaLink": "#portfolio",
            "layout": "split",
            "overlayOpacity": 0.3
          }
        },
        {
          "type": "Gallery",
          "props": {
            "layout": "edge-to-edge",
            "columns": 1,
            "images": [],
            "spacing": "none"
          }
        },
        {
          "type": "Packages",
          "props": {
            "title": "PRICING",
            "layout": "cards",
            "backgroundColor": "#f3f4f6",
            "packages": [
              {
                "name": "PORTRAIT",
                "price": "$350",
                "features": ["90 min session", "50 images", "Digital delivery"],
                "accent": "#1e3a8a"
              },
              {
                "name": "COMMERCIAL",
                "price": "$1200",
                "features": ["Half day shoot", "100+ images", "Usage rights"],
                "accent": "#3b82f6"
              },
              {
                "name": "EVENT",
                "price": "$2500",
                "features": ["Full day coverage", "300+ images", "Rush delivery"],
                "accent": "#1e3a8a"
              }
            ]
          }
        },
        {
          "type": "Instagram",
          "props": {
            "title": "FOLLOW @STUDIO",
            "handle": "@modernstudio",
            "feedType": "grid",
            "posts": 6
          }
        }
      ]
    },
    {
      "title": "Portfolio",
      "slug": "portfolio",
      "blocks": [
        {
          "type": "Gallery",
          "props": {
            "layout": "edge-to-edge",
            "filter": true,
            "categories": ["Portrait", "Commercial", "Editorial"],
            "hoverEffect": "zoom",
            "spacing": "none"
          }
        }
      ]
    },
    {
      "title": "Contact",
      "slug": "contact",
      "blocks": [
        {
          "type": "ContactForm",
          "props": {
            "title": "START A PROJECT",
            "layout": "split-screen",
            "fields": ["name", "email", "projectType", "budget", "timeline", "details"],
            "backgroundImage": "/images/contact-bg.jpg"
          }
        }
      ]
    }
  ]
}
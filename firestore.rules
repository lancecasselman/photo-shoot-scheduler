rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own site configurations
    match /users/{userId}/siteConfig/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Published sites are publicly readable
    match /published_sites/{username} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // All other documents require authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
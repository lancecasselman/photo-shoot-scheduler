rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own site configurations
    match /users/{userId}/siteConfig/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Published sites are publicly readable
    match /published_sites/{username} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Community posts
    match /community_posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
      
      // Likes subcollection
      match /likes/{likeId} {
        allow read: if true;
        allow create: if request.auth != null && request.auth.uid == likeId;
        allow delete: if request.auth != null && request.auth.uid == likeId;
      }
      
      // Comments subcollection
      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
      }
    }
    
    // All other documents require authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
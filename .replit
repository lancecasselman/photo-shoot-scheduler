packages = [
  "android-tools",
  "firebase-tools",
  "freetype",
  "git-lfs",
  "gitFull",
  "imagemagick",
  "lcms2",
  "libimagequant",
  "libjpeg",
  "libtiff",
  "libwebp",
  "libxcrypt",
  "openjdk17",
  "openjpeg",
  "openssh",
  "playwright",
  "playwright-driver",
  "postgresql",
  "tcl",
  "tk",
  "unzip",
